#!/bin/bash
set -euo pipefail

linux_zen_base() {
    clear
    basestrap /mnt terminus-font linux-zen base base-devel mkinitcpio openrc dbus dbus-openrc elogind-openrc linux-firmware linux-zen-headers dialog acpid linux-api-headers flatpak acpid-openrc
    fast-chroot /mnt flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
}

linux_lts_base() {
    clear
    basestrap /mnt terminus-font linux-lts base base-devel mkinitcpio openrc dbus dbus-openrc elogind-openrc linux-firmware linux-lts-headers dialog acpid linux-api-headers flatpak acpid-openrc
    fast-chroot /mnt flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
}

linux_base() {
    clear
    basestrap /mnt terminus-font linux base base-devel mkinitcpio openrc dbus dbus-openrc elogind-openrc linux-firmware linux-headers dialog acpid linux-api-headers flatpak acpid-openrc
    fast-chroot /mnt flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
}

# –î–∏–∞–ª–æ–≥ –≤—ã–±–æ—Ä–∞ —è–¥—Ä–∞
boxbase=$(dialog --title "–í—ã–±–µ—Ä–∏—Ç–µ —è–¥—Ä–æ" --menu "–ü–∞–∫–µ—Ç—ã" 15 50 5 \
    1 "linux-zen" \
    2 "linux-lts" \
    3 "linux" \
    3>&1 1>&2 2>&3 3>&-)

case $? in
    0)
        case $boxbase in
            1) linux_zen_base ;;
            2) linux_lts_base ;;
            3) linux_base ;;
            *) echo "–ù–µ–≤–µ—Ä–Ω—ã–π –≤—ã–±–æ—Ä"; exit 1 ;;
        esac
        ;;
    *)
        echo "–í—ã–±–æ—Ä –æ—Ç–º–µ–Ω–µ–Ω"
        exit 1
        ;;
esac
################################################################################
# –°–æ–∑–¥–∞–Ω–∏–µ —Ñ–∞–π–ª–æ–≤ OS release
cat > /mnt/usr/lib/os-release << 'OS_EOF'
NAME="Quasar Linux"
PRETTY_NAME="Quasar Linux (Artix base)"
ID=quasar
ID_LIKE=artix
ANACONDA_ID="quasar"
VERSION="REV-0.6"
VERSION_ID="0.6"
BUILD_ID="rolling"
ANSI_COLOR="0;36"
HOME_URL="https://b-e-n-z1342.github.io"
LOGO=quasar-logo
OS_EOF

cat > /mnt/etc/lsb-release << 'LSB_EOF'
DISTRIB_ID=Quasar
DISTRIB_RELEASE=0.6
DISTRIB_DESCRIPTION="Quasar Linux"
DISTRIB_CODENAME=rolling
LSB_EOF
###############################################################################
# –ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–∞—è –Ω–∞—Å—Ç—Ä–æ–π–∫–∞ issue
echo "Quasar Linux \\r \\l" > /mnt/etc/issue
echo "Quasar Linux" > /mnt/etc/issue.net
echo "Welcome to Quasar Linux!" > /mnt/etc/motd

sleep 5
clear
echo "–ê–∫—Ç–∏–≤–∞—Ü–∏—è —Å–µ—Ä–≤–∏—Å–æ–≤"

# –ê–∫—Ç–∏–≤–∞—Ü–∏—è —Å–µ—Ä–≤–∏—Å–æ–≤
######################################################################################
# dbus

if fast-chroot /mnt rc-update add dbus default; then
    echo "dbus —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∞–≤—Ç–æ–∑–∞–≥—Ä—É–∑–∫—É"
else
    echo "–û—à–∏–±–∫–∞, —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º dbus..."
    fast-chroot /mnt pacman -S dbus dbus-openrc
    fast-chroot /mnt rc-update add dbus default
fi#!/bin/sh
# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ—Ç –±—Ä–µ–Ω–¥ "QuasarLinux" –≤ OpenRC —Ü–µ–ª–µ–≤–æ–π —Å–∏—Å—Ç–µ–º—ã
# –ü—Ä–µ–¥–Ω–∞–∑–Ω–∞—á–µ–Ω –¥–ª—è –∑–∞–ø—É—Å–∫–∞ –∏–∑ —É—Å—Ç–∞–Ω–æ–≤—â–∏–∫–∞ (—Ü–µ–ª–µ–≤–∞—è –§–° —Å–º–æ–Ω—Ç–∏—Ä–æ–≤–∞–Ω–∞ –≤ /mnt)

set -e

TARGET_ROOT="/mnt"
OPENRC_BIN="${TARGET_ROOT}/sbin/openrc"

OLD_NAME="Artix Linux"
NEW_NAME="QuasarLinux"

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–ª–∏–Ω—ã ‚Äî –∫—Ä–∏—Ç–∏—á–µ—Å–∫–∏ –≤–∞–∂–Ω–æ!
if [ ${#OLD_NAME} -ne ${#NEW_NAME} ]; then
    echo "‚ùå –û–®–ò–ë–ö–ê: –¥–ª–∏–Ω–∞ '$OLD_NAME' (${#OLD_NAME}) != '$NEW_NAME' (${#NEW_NAME})"
    echo "   –ó–∞–º–µ–Ω–∞ –æ—Ç–º–µ–Ω–µ–Ω–∞ ‚Äî –≤–æ–∑–º–æ–∂–Ω–∞ –ø–æ—Ä—á–∞ –±–∏–Ω–∞—Ä–Ω–∏–∫–∞!"
    exit 1
fi

# –ü—Ä–æ–≤–µ—Ä—è–µ–º, —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–∏ openrc –≤ —Ü–µ–ª–µ–≤–æ–π —Å–∏—Å—Ç–µ–º–µ
if [ ! -f "$OPENRC_BIN" ]; then
    echo "‚ö†Ô∏è  $OPENRC_BIN –Ω–µ –Ω–∞–π–¥–µ–Ω. –ü—Ä–æ–ø—É—Å–∫ –±—Ä–µ–Ω–¥–∏—Ä–æ–≤–∞–Ω–∏—è."
    exit 0
fi

echo "üîç –ü–æ–∏—Å–∫ '$OLD_NAME' –≤ $OPENRC_BIN..."

# –ò—â–µ–º –≤—Å–µ –≤—Ö–æ–∂–¥–µ–Ω–∏—è
matches=$(grep -a -b "$OLD_NAME" "$OPENRC_BIN" 2>/dev/null || true)

if [ -z "$matches" ]; then
    echo "‚úÖ '$OLD_NAME' –Ω–µ –Ω–∞–π–¥–µ–Ω ‚Äî –≤–æ–∑–º–æ–∂–Ω–æ, —É–∂–µ –∑–∞–º–µ–Ω—ë–Ω –∏–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –¥—Ä—É–≥–æ–π –¥–∏—Å—Ç—Ä–∏–±—É—Ç–∏–≤."
    exit 0
fi

# –°–æ–∑–¥–∞—ë–º –±—ç–∫–∞–ø (—Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –µ–≥–æ –µ—â—ë –Ω–µ—Ç)
BACKUP="${OPENRC_BIN}.quasar.bak"
if [ ! -f "$BACKUP" ]; then
    echo "üíæ –°–æ–∑–¥–∞—é –±—ç–∫–∞–ø: ${BACKUP##*/}"
    cp "$OPENRC_BIN" "$BACKUP"
fi

# –ó–∞–º–µ–Ω—è–µ–º –∫–∞–∂–¥–æ–µ –≤—Ö–æ–∂–¥–µ–Ω–∏–µ
echo "üîß –ó–∞–º–µ–Ω–∞ –Ω–∞ '$NEW_NAME'..."
echo "$matches" | while IFS=: read -r offset rest; do
    if [ -n "$offset" ]; then
        # –ó–∞–ø–∏—Å—ã–≤–∞–µ–º –Ω–æ–≤—É—é —Å—Ç—Ä–æ–∫—É + –Ω—É–ª–µ–≤–æ–π –±–∞–π—Ç (—Ä–æ–≤–Ω–æ —Å—Ç–æ–ª—å–∫–æ –∂–µ –±–∞–π—Ç, —Å–∫–æ–ª—å–∫–æ –±—ã–ª–æ)
        printf '%s\0' "$NEW_NAME" | dd of="$OPENRC_BIN" bs=1 seek="$offset" conv=notrunc 2>/dev/null
        echo "   ‚Üí –ü–æ–∑–∏—Ü–∏—è $offset –æ–±–Ω–æ–≤–ª–µ–Ω–∞"
    fi
done

echo "‚úÖ –ë—Ä–µ–Ω–¥–∏—Ä–æ–≤–∞–Ω–∏–µ –∑–∞–≤–µ—Ä—à–µ–Ω–æ: OpenRC —Ç–µ–ø–µ—Ä—å –≥–æ–≤–æ—Ä–∏—Ç '$NEW_NAME' –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ."

######################################################################################
#  udev

if fast-chroot /mnt rc-update add udev default; then
    echo "udev —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∞–≤—Ç–æ–∑–∞–≥—Ä—É–∑–∫—É"
else
    echo "–û—à–∏–±–∫–∞, —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º udev..."
    fast-chroot /mnt pacman -S udev lib32-udev || fast-chroot /mnt pacman -S udev
    fast-chroot /mnt rc-update add udev default
fi

######################################################################################
# elogind

if fast-chroot /mnt rc-update add elogind default; then
    echo "elogind —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∞–≤—Ç–æ–∑–∞–≥—Ä—É–∑–∫—É"
else
    echo "–û—à–∏–±–∫–∞, —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º elogind..."
    fast-chroot /mnt pacman -S elogind elogind-openrc
    fast-chroot /mnt rc-update add elogind default
fi

########################################################################################
# acpid

if fast-chroot /mnt rc-update add acpid default; then
    echo "acpid —É—Å–ø–µ—à–Ω–æ –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∞–≤—Ç–æ–∑–∞–≥—Ä—É–∑–∫—É"
else
    echo "–û—à–∏–±–∫–∞, —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º acpid..."
    fast-chroot /mnt pacman -S acpid acpid-openrc
    fast-chroot /mnt rc-update add acpid default
fi

#########################################################################################
# –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏–æ–Ω–Ω—ã—Ö —Ñ–∞–π–ª–æ–≤

if [ -f /installer/configs/pacman.conf ]; then
    rm /mnt/etc/pacman.conf
    cp /installer/configs/pacman.conf /mnt/etc/
else
    echo "–ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ: pacman.conf –Ω–µ –Ω–∞–π–¥–µ–Ω"
fi

#########################################################################################
# –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ post-–∏–Ω—Å—Ç–∞–ª–ª—è—Ü–∏–æ–Ω–Ω—ã—Ö —Å–∫—Ä–∏–ø—Ç–æ–≤
if [ -d /installer/post ]; then
    cp -r /installer/post /mnt/
fi

# –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ —Ä–µ–≥–∏–æ–Ω–∞–ª—å–Ω—ã—Ö –Ω–∞—Å—Ç—Ä–æ–µ–∫
if [ -d /installer/regions ]; then
    cp -r /installer/regions /mnt/
fi
#########################################################################################

# –£–±–∏—Ä–∞–µ–º –∞–≤—Ç–æ–≥–µ–Ω–µ—Ä–∞—Ü–∏—é motd
if [ -d /mnt/etc/update-motd.d/ ]; then
    rm -rf /mnt/etc/update-motd.d/
fi

########################################################################################
# –°–∏–º–ª–∏–Ω–∫ –¥–ª—è —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏
ln -sf /usr/lib/os-release /mnt/etc/os-release 2>/dev/null || true

##########################################################################################

# –ó–∞—â–∏—Ç–∞ —Å–∏—Å—Ç–µ–º–Ω—ã—Ö —Ñ–∞–π–ª–æ–≤ (—Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –æ–Ω–∏ —Å—É—â–µ—Å—Ç–≤—É—é—Ç)
[ -f /mnt/usr/lib/os-release ] && chattr +i /mnt/usr/lib/os-release 2>/dev/null || true
[ -f /mnt/etc/lsb-release ] && chattr +i /mnt/etc/lsb-release 2>/dev/null || true

###########################################################################################
# –ø–æ–ª–Ω–∞—è —Å–º–µ–Ω–∞ –Ω–∞–∑–≤–∞–Ω–∏—è
#!/bin/sh
# –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ—Ç –±—Ä–µ–Ω–¥ "QuasarLinux" –≤ OpenRC —Ü–µ–ª–µ–≤–æ–π —Å–∏—Å—Ç–µ–º—ã
# –ü—Ä–µ–¥–Ω–∞–∑–Ω–∞—á–µ–Ω –¥–ª—è –∑–∞–ø—É—Å–∫–∞ –∏–∑ —É—Å—Ç–∞–Ω–æ–≤—â–∏–∫–∞ (—Ü–µ–ª–µ–≤–∞—è –§–° —Å–º–æ–Ω—Ç–∏—Ä–æ–≤–∞–Ω–∞ –≤ /mnt)

set -e

TARGET_ROOT="/mnt"
OPENRC_BIN="${TARGET_ROOT}/sbin/openrc"

OLD_NAME="Artix Linux"
NEW_NAME="QuasarLinux"

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–ª–∏–Ω—ã ‚Äî –∫—Ä–∏—Ç–∏—á–µ—Å–∫–∏ –≤–∞–∂–Ω–æ!
if [ ${#OLD_NAME} -ne ${#NEW_NAME} ]; then
    echo "–û–®–ò–ë–ö–ê: –¥–ª–∏–Ω–∞ '$OLD_NAME' (${#OLD_NAME}) != '$NEW_NAME' (${#NEW_NAME})"
    echo "   –ó–∞–º–µ–Ω–∞ –æ—Ç–º–µ–Ω–µ–Ω–∞ ‚Äî –≤–æ–∑–º–æ–∂–Ω–∞ –ø–æ—Ä—á–∞ –±–∏–Ω–∞—Ä–Ω–∏–∫–∞!"
    exit 1
fi

# –ü—Ä–æ–≤–µ—Ä—è–µ–º, —Å—É—â–µ—Å—Ç–≤—É–µ—Ç –ª–∏ openrc –≤ —Ü–µ–ª–µ–≤–æ–π —Å–∏—Å—Ç–µ–º–µ
if [ ! -f "$OPENRC_BIN" ]; then
    echo "- $OPENRC_BIN –Ω–µ –Ω–∞–π–¥–µ–Ω. –ü—Ä–æ–ø—É—Å–∫ –±—Ä–µ–Ω–¥–∏—Ä–æ–≤–∞–Ω–∏—è."
    exit 0
fi

echo "–ü–æ–∏—Å–∫ '$OLD_NAME' –≤ $OPENRC_BIN..."

# –ò—â–µ–º –≤—Å–µ –≤—Ö–æ–∂–¥–µ–Ω–∏—è
matches=$(grep -a -b "$OLD_NAME" "$OPENRC_BIN" 2>/dev/null || true)

if [ -z "$matches" ]; then
    echo "+ '$OLD_NAME' –Ω–µ –Ω–∞–π–¥–µ–Ω ‚Äî –≤–æ–∑–º–æ–∂–Ω–æ, —É–∂–µ –∑–∞–º–µ–Ω—ë–Ω –∏–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è –¥—Ä—É–≥–æ–π –¥–∏—Å—Ç—Ä–∏–±—É—Ç–∏–≤."
    exit 0
fi

# –°–æ–∑–¥–∞—ë–º –±—ç–∫–∞–ø (—Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ –µ–≥–æ –µ—â—ë –Ω–µ—Ç)
BACKUP="${OPENRC_BIN}.quasar.bak"
if [ ! -f "$BACKUP" ]; then
    echo "–°–æ–∑–¥–∞—é –±—ç–∫–∞–ø: ${BACKUP##*/}"
    cp "$OPENRC_BIN" "$BACKUP"
fi

# –ó–∞–º–µ–Ω—è–µ–º –∫–∞–∂–¥–æ–µ –≤—Ö–æ–∂–¥–µ–Ω–∏–µ
echo "–ó–∞–º–µ–Ω–∞ –Ω–∞ '$NEW_NAME'..."
echo "$matches" | while IFS=: read -r offset rest; do
    if [ -n "$offset" ]; then
        # –ó–∞–ø–∏—Å—ã–≤–∞–µ–º –Ω–æ–≤—É—é —Å—Ç—Ä–æ–∫—É + –Ω—É–ª–µ–≤–æ–π –±–∞–π—Ç (—Ä–æ–≤–Ω–æ —Å—Ç–æ–ª—å–∫–æ –∂–µ –±–∞–π—Ç, —Å–∫–æ–ª—å–∫–æ –±—ã–ª–æ)
        printf '%s\0' "$NEW_NAME" | dd of="$OPENRC_BIN" bs=1 seek="$offset" conv=notrunc 2>/dev/null
        echo "   ‚Üí –ü–æ–∑–∏—Ü–∏—è $offset –æ–±–Ω–æ–≤–ª–µ–Ω–∞"
    fi
done

echo "–ë—Ä–µ–Ω–¥–∏—Ä–æ–≤–∞–Ω–∏–µ –∑–∞–≤–µ—Ä—à–µ–Ω–æ: OpenRC —Ç–µ–ø–µ—Ä—å –≥–æ–≤–æ—Ä–∏—Ç '$NEW_NAME' –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ."

echo "–ë–∞–∑–æ–≤–∞—è —É—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞!"
